{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Weather Message",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "source": {"type": "string"},
    "schema_version": {"type": "string"},
    "pipeline": {"type": "string"},
    "pipeline_version": {"type": "string"},
    "country": {"type": ["string", "null"]},
    "city": {"type": ["string", "null"]},
    "latitude": {"type": ["number", "null"]},
    "longitude": {"type": ["number", "null"]},
    "temperature": {"type": ["number", "null"]},
    "temperature_unit": {"type": ["string", "null"]},
    "wind_speed": {"type": ["number", "null"]},
    "wind_unit": {"type": ["string", "null"]},
    "humidity": {"type": ["integer", "null"]},
    "humidity_unit": {"type": ["string", "null"]},
    "event_time": {"type": ["string", "null"], "format": "date-time"},
    "ingestion_time": {"type": "string", "format": "date-time"},
    "message_id": {"type": "string", "minLength": 1}
  },
  "required": [
    "source",
    "schema_version",
    "pipeline",
    "pipeline_version",
    "country",
    "city",
    "latitude",
    "longitude",
    "temperature",
    "temperature_unit",
    "wind_speed",
    "wind_unit",
    "humidity",
    "humidity_unit",
    "event_time",
    "ingestion_time",
    "message_id"
  ]
}
