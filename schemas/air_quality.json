{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Air Quality Message",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "source": {"type": "string"},
    "schema_version": {"type": "string"},
    "pipeline": {"type": "string"},
    "pipeline_version": {"type": "string"},
    "country": {"type": ["string", "null"]},
    "city": {"type": ["string", "null"]},
    "station_city": {"type": ["string", "null"]},
    "target_city": {"type": ["string", "null"]},
    "parameter": {"type": ["string", "null"]},
    "value": {"type": ["number", "null"]},
    "unit": {"type": ["string", "null"]},
    "latitude": {"type": ["number", "null"]},
    "longitude": {"type": ["number", "null"]},
    "event_time": {"type": ["string", "null"], "format": "date-time"},
    "ingestion_time": {"type": "string", "format": "date-time"},
    "location_id": {"type": ["integer", "string", "null"]},
    "sensor_id": {"type": ["integer", "string", "null"]},
    "provider": {"type": ["string", "null"]},
    "parameter_id": {"type": ["integer", "null"]},
    "message_id": {"type": "string", "minLength": 1}
  },
  "required": [
    "source",
    "schema_version",
    "pipeline",
    "pipeline_version",
    "country",
    "city",
    "station_city",
    "target_city",
    "parameter",
    "value",
    "unit",
    "latitude",
    "longitude",
    "event_time",
    "ingestion_time",
    "location_id",
    "sensor_id",
    "provider",
    "parameter_id",
    "message_id"
  ]
}
